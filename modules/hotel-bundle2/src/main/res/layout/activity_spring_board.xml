<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_single_task_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="config intent：single task"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_single_task_manifest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="config manifest：single task"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/bt_new_task_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="config intent：new  task"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/bt_single_instance_manifest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="config manifest：single instance"
        android:textAllCaps="false" />
</LinearLayout>