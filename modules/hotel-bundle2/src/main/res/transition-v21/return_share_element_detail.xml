<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
               android:duration="1000">

    <!-- changeBounds is used for the TextViews which are shared -->
    <changeBounds android:matchOrder="itemId"/>

    <!-- changeImageTransform is used for the ImageViews which are shared -->
    <changeImageTransform android:matchOrder="itemId"/>
    <changeTransform
        android:reparent="true"
        android:reparentWithOverlay="true"/>
    <changeScroll android:matchOrder="itemId"/>
    <changeClipBounds android:matchOrder="itemId"/>

</transitionSet>